# Server Configuration
HOST=0.0.0.0
PORT=8000

# Crawler Configuration
CRAWL_TIMEOUT=60
BROWSER_HEADLESS=true
BROWSER_VERBOSE=true

# Concurrency and Memory Management
MAX_CONCURRENT_CRAWLS=1  # Maximum concurrent crawl operations (limits memory usage)
QUEUE_TIMEOUT=60         # Timeout in seconds for waiting in queue

# Anti-Bot Detection
USE_STEALTH=true           # Enable stealth mode to bypass bot detection
BROWSER_TYPE=undetected    # Browser type: chromium, firefox, webkit, or undetected
# PROXY_SERVER=             # Optional: http://proxy.example.com:8080

# Logging
LOG_LEVEL=INFO
